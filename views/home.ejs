<%- include("partials/header.ejs") -%>
<% postArray.forEach(function(element){ %>
<% if(element.title === "Home"){ %>
<h1><%= element.title %></h1>
<p> <%= element.post %> </p>
<%  } else{ %>
<h1><%= element.title %></h1>
<p> <%= element.post.substring(0, 100).concat('...');  %> <a href="/posts/<%= element._id %>">Read More</a></p>
<% } %>
<% }) %>
